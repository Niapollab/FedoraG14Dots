{
    // Theme
    "workbench.colorTheme": "Dracula Theme",

    // MenuBar
    "window.menuBarVisibility": "toggle",

    // Font
    "editor.fontSize": 14,
    "editor.fontFamily": "Fira Code Retina",
    "editor.fontLigatures": true,

    // Whitespaces
    "files.trimTrailingWhitespace": true,

    // Debug
    "debug.allowBreakpointsEverywhere": true,

    // C++
    "C_Cpp.inlayHints.referenceOperator.enabled": true,
    "C_Cpp.inlayHints.parameterNames.enabled": true,
    "C_Cpp.inlayHints.parameterNames.hideLeadingUnderscores": true,
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.inlayHints.parameterNames.suppressWhenArgumentContainsName": true,

    // Python
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",

    // Markdown
    "markdownlint.config": {
        "MD033": {
            "allowed_elements": [
                "p",
                "img"
            ]
        }
    },

    // ChatGPT Integration
    "genieai.personalizedName": "Claire",
    "genieai.openai.apiBaseUrl": "http://localhost:1337",
    "genieai.openai.model": "gpt-4"
}
